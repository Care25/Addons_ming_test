<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<!-- ************************Problem form view **********************************    -->
        <record model="ir.ui.view" id="problem_form_view">
            <field name="name">problem.form</field>
            <field name="model">it_problem.problem</field>
            <field name="arch" type="xml">
                <form string="แจ้งปัญหา">
                    <header>
                        <button string="test" type="object" name="test_problem" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group> 
                            <field name="topicp" string="หัวข้อ"/>
                        </group>
                         <group colspan="4" col="4">
                                <field name="mainpro" string="ประเภทปัญหา"/>
                                <field name="ptype" string="ส่วนที่เกี่ยวข้อง" attrs="{'invisible':[('mainpro','=','car')]}"/>
                                <field name="name"  options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' string="ผู้แจ้งเรื่อง"/>
                                <field name="date" string="วันแจ้งเรื่อง"/>
                                <!-- <field name="test"/> -->
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="notep" placeholder="กรอกรายละเอียด"/>
                            </page>
                        </notebook>                    
                    </sheet>
                </form>
            </field>
        </record>
        
<!-- ************************Problem tree view **********************************    -->
        <record model="ir.ui.view" id="problem_tree_view">
            <field name="name">problem.tree</field>
            <field name="model">it_problem.problem</field>
            <field name="arch" type="xml">
                <tree string="แจ้งปัญหา">
                     <field name="topicp" string="หัวข้อ"/>
                     <field name="ptype" string="ส่วนที่เกี่ยวข้อง"/>
                     <field name="name" string="ผู้แจ้งเรื่อง"/>
                     <field name="date" string="วันแจ้งเรื่อง"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="problem_search_view">
            <field name="name">problem.search</field>
            <field name="model">it_problem.problem</field>
            <field name="arch" type="xml">
                <search>
                     <field name="topicp" string="หัวข้อ"/>
                     <field name="ptype" string="ส่วนที่เกี่ยวข้อง"/>
                     <field name="name" string="ผู้แจ้งเรื่อง"/>
                     <field name="date" string="วันแจ้งเรื่อง"/>
                </search>
            </field>
        </record>
        
<!-- ***************** Problem ******************* -->
        <record model="ir.actions.act_window" id="problem_list_action">
            <field name="name">Problem</field>
            <field name="res_model">it_problem.problem</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="context" eval="{'search_default_my_courses': 1}"/> -->
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_problem_menu" name="แจ้งปัญหา"/>
        <menuitem id="topic_it_problem_menu" name="แจ้งปัญหาด้าน IT"
                  parent="main_problem_menu"/>
        <menuitem id="program_problem_menu" name="แจ้งปัญหาโปรแกรม" parent="topic_it_problem_menu"
                  action="problem_list_action"/>
    </data>
</openerp>