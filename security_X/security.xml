<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record id="sale_forcast_personal_rule" model="ir.rule">
            <field name="name">Personal Sale Forcast</field>
            <field ref="model_ineco_sale_forecast" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('base.group_sale_salesman'))]"/>
        </record>
        <record id="sale_forcast_see_all" model="ir.rule">
            <field name="name">All Sale Forcast</field>
            <field ref="model_ineco_sale_forecast" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
        </record>
        <record id="secure_ineco_product_forecast" model="ir.model.access">
            <field name="name">Employees</field>
            <field name="group_id" ref="base.group_user" />
            <field name="model_id" ref="model_ineco_product_forecast" />
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</openerp>